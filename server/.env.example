# Copy this file to .env and fill in your local values
# This example is for local development

PORT=5000
CLIENT_URL=http://localhost:5173
APP_BASE_URL=http://localhost:5000

# REQUIRED: PostgreSQL connection string
# Example for local Postgres running on default port with a database named "peakself"
DATABASE_URL=postgres://postgres:postgres@localhost:5432/peakself

# Secrets (use strong random values for development; never commit real secrets)
SESSION_SECRET=change_me_development
JWT_SECRET=change_me_development

# Optional SMTP (email)
#SMTP_HOST=smtp.example.com
#SMTP_PORT=587
#SMTP_USER=username
#SMTP_PASS=password
#EMAIL_FROM=no-reply@peakself.local

# Optional Google OAuth
#GOOGLE_CLIENT_ID=...
#GOOGLE_CLIENT_SECRET=...
#GOOGLE_CALLBACK_URL=/api/auth/google/callback
